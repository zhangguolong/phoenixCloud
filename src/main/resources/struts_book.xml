<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="book" extends="struts-default" namespace="/book">
		<action name="*_*" class="{1}MgmtAction" method="{2}" >
			<result name="success">/{1}_{2}.jsp</result>
		</action>
		
		<action name="uploadBook" class="com.phoenixcloud.book.action.RBookUploadAction" method="uploadBook">
			<interceptor-ref name="fileUpload">  
				<param name="maximumSize">104857600</param>
			</interceptor-ref>
			<result name="success" type="redirect">/book/bookDire_getAll.do?bookId=${bookId}</result>
		</action>
	</package>
</struts>